<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-center">
  <div class="col-lg-4">
    <div>
      <h2 class=text-center>Adding Movie Bookmark</h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= link_to 'back', lists_path(@list), class: 'btn btn-info' %>
        <%= f.submit "Add Bookmark", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
